{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["./.vovk/index.ts", "./src/app/api/[[...]]/route.ts", "./worker-syntax.d.ts", "./src/modules/worker/WorkerService.ts"],
}
